@model HobbyClub.Web.Models.EventViewModel

@{
    //ViewBag.Title = "GetAllEvents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <h2>Events</h2>
    <div class="row">
        @foreach (var item in Model.events)
        {
            <div class="col-sm-6 col-md-4" >
                <div class="thumbnail">
                    <img src=@item.logoImg style="width: 150px; height: 150px;">
                    <div class="caption">
                        <h3>@item.name</h3>
                        <p>@item.where</p>
                        <p>@item.when</p>
                        <p>@item.available</p>
                        <p><a href="#" class="btn btn-primary" role="button">JOIN</a> </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

