@model HobbyClub.Web.Models.MainPageViewModel
<section id="main-slider">
    <div class="owl-carousel">
        @foreach (var slide in Model.slider)
        {
            <div class="item" @(!string.IsNullOrWhiteSpace(slide.img) ? "style=background-image:url('" + slide.img + "')" : string.Empty)>
                <div class="slider-inner">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="carousel-content">
                                    <h2><span>@slide.name</span> </h2>
                                    <p>@slide.description</p>
                                    <a class="btn btn-primary btn-lg" href="#">Join</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }<!--/.item-->
    </div><!--/.owl-carousel-->
</section><!--/#main-slider-->
<section id="features">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title text-center wow fadeInDown">YOU CAN</h2>
            <p class="text-center wow fadeInDown"></p>
        </div>
        <div class="row">
            <div class="col-sm-6 wow fadeInLeft">
                <img class="img-responsive" src="Content/Images/main-feature.png" alt="">
            </div>
            <div class="col-sm-6">
                <div class="media service-box wow fadeInRight">
                    <div class="pull-left">
                        <i class="fa fa-pencil"></i>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">Create events</h4>
                        <p>Wanna play football? Missing 20 people? Just create an event!</p>
                    </div>
                </div>
                <div class="media service-box wow fadeInRight">
                    <div class="pull-left">
                        <i class="fa fa-gears"></i>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">Manage your interests</h4>
                        <p>What do you like to do in your free time? Sing up for ALL your interests. No such interests in the list? Add your own!</p>
                    </div>
                </div>
                <div class="media service-box wow fadeInRight">
                    <div class="pull-left">
                        <i class="fa fa-users"></i>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">Participate in groups</h4>
                        <p>Have many interests? Wanna talk about them? Join groups!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="portfolio">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title text-center wow fadeInDown">Popular interests</h2>
            <p class="text-center wow fadeInDown"> Our users admire the most</p>
        </div>
        <div class="portfolio-items">
            @foreach (var interest in Model.interests)
            {
                <div class="portfolio-item creative">
                    <div class="portfolio-item-inner">
                        <img class="img-responsive" src=@interest.img alt="">
                        <div class="portfolio-info">
                            <h3>@interest.name</h3>
                            <a class="preview" href=@interest.previewImg rel="prettyPhoto"><i class="fa fa-eye"></i></a>
                        </div>
                    </div>
                </div><!--/.portfolio-item-->
            }
        </div>
    </div><!--/.container-->
</section><!--/#portfolio-->
<section id="pricing">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title text-center wow fadeInDown">Events</h2>
            <p class="text-center wow fadeInDown">Our closest events. Interested? Hurry up! Join right now!</p>
        </div>
        <div class="row">
            @foreach (var item in Model.events)
            {
                <div class="col-sm-6 col-md-3">
                    <div class="wow zoomIn" data-wow-duration="400ms" data-wow-delay="0ms">
                        <ul class="pricing">
                            <li class="plan-header">
                                <div class="price-duration">
                                    <span class="price">
                                        <img class="img-circle text-center" src=@item.logoImg style="width: 98px; height: 98px; margin-top: -31px;" />
                                    </span>
                                    @*<span class="duration">

                                        </span>*@
                                </div>
                                <div class="plan-name">
                                    @item.name
                                </div>
                            </li>
                            <li><strong> @item.where</strong> </li>
                            <li><strong> @item.when</strong> </li>
                            <li><strong> @item.available</strong> </li>
                            <li class="plan-purchase"><a class="btn btn-primary" href="#">JOIN NOW</a></li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</section><!--/#pricing-->
<section id="animated-number">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title text-center wow fadeInDown">Fun Facts</h2>
            <p class="text-center wow fadeInDown">Some things(numbers) about Hobbyzilla you might be interesting to know</p>
        </div>
        <div class="row text-center">
            <div class="col-sm-3 col-xs-6">
                <div class="wow fadeInUp" data-wow-duration="400ms" data-wow-delay="0ms">
                    <div class="animated-number" data-digit="0000" data-duration="1000"></div>
                    <strong>PEOPLE INVOLVED</strong>
                </div>
            </div>
            <div class="col-sm-3 col-xs-6">
                <div class="wow fadeInUp" data-wow-duration="400ms" data-wow-delay="100ms">
                    <div class="animated-number" data-digit="0000" data-duration="1000"></div>
                    <strong>CREATED EVENTS</strong>
                </div>
            </div>
            <div class="col-sm-3 col-xs-6">
                <div class="wow fadeInUp" data-wow-duration="400ms" data-wow-delay="200ms">
                    <div class="animated-number" data-digit="0000" data-duration="1000"></div>
                    <strong>GATHERED GROUPS</strong>
                </div>
            </div>
            <div class="col-sm-3 col-xs-6">
                <div class="wow fadeInUp" data-wow-duration="400ms" data-wow-delay="300ms">
                    <div class="animated-number" data-digit="0000" data-duration="1000"></div>
                    <strong>INTERESTS AVAILABLE</strong>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="services">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title text-center wow fadeInDown">Groups</h2>
            <p class="text-center wow fadeInDown">Not just an interest. A lot of people + a lot of interests</p>
        </div>
        <div class="row">
            <div class="features">
                @foreach (var group in Model.groups)
                {
                    <div class="col-md-4 col-sm-6 wow fadeInUp" data-wow-duration="300ms" data-wow-delay="0ms">
                        <div class="media service-box">
                            <div class="pull-left">
                                <i class="fa">
                                    <img class="img-circle text-center" src=@group.logoImg style=" width: 52px; height: 52px; margin-top: -4px; margin-left: 0px;" />
                                </i>
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading">@group.name</h4>
                                <p>@group.description</p>
                            </div>
                        </div>
                    </div><!--/.col-md-4-->
                }
            </div>
        </div><!--/.row-->
    </div><!--/.container-->
</section><!--/#services-->
<section id="about">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title text-center wow fadeInDown">About Us</h2>
            <p class="text-center wow fadeInDown"></p>
        </div>
        <div class="row">
            <div class="col-sm-6 wow fadeInLeft">
                <h3 class="column-title">Video Intro</h3>
                <!-- 16:9 aspect ratio -->
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe src="//player.vimeo.com/video/58093852?title=0&amp;byline=0&amp;portrait=0&amp;color=e79b39" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                </div>
            </div>
            <div class="col-sm-6 wow fadeInRight">
                <h3 class="column-title"></h3>
                <p>First Hobbyclub was just a test project for a bunch people who were learning new technologies and honing their skills. But now we are something bigger. You made us bigger.</p>
                <p>Our goal is to help finding people that like what you like by creating events. Make you free time more enjoyable, colorful and varied. </p>
                <div class="row">
                    <div class="col-sm-6">
                        <ul class="nostyle">
                            <li><i class="fa fa-check-square-o"></i> Create events</li>
                            <li><i class="fa fa-check-square-o"></i> Join groups</li>
                        </ul>
                    </div>
                    <div class="col-sm-6">
                        <ul class="nostyle">
                            <li><i class="fa fa-check-square-o"></i> Add interests</li>
                            <li><i class="fa fa-check-square-o"></i> Have fun</li>
                        </ul>
                    </div>
                </div>
                <a class="btn btn-primary" href="#">See More</a>
            </div>
        </div>
    </div>
</section><!--/#about-->
